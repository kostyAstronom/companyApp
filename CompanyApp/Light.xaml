<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CompanyApp">
    <Style x:Key="TextBoxCorrectStyle" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="Silver"></Setter>
    </Style>
    <Style x:Key="TextBoxUnCorrectStyle" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="Red"></Setter>
    </Style>
    <Style x:Key="TextBlockBeforeField" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>
    <Style x:Key="TextBlockUnCorrect" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red"></Setter>
    </Style>
</ResourceDictionary>